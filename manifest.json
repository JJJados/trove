{
    "name": "Trove",
    "description": "A delightfully simple Chrome extension that can effortlessly save, sync, and reopen your tab groups upon startup.",
    "version": "1.0.1",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/index.html"
    },
    "background": {
      "service_worker": "src/lib/background.ts"
    },
    "icons": {
      "16": "trove-logo-16.png",
      "48": "trove-logo-48.png",
      "128": "trove-logo-128.png"
    },
    "permissions": ["storage", "tabs", "tabGroups"]
  }